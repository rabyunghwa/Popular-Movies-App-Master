<resources>

    <style name="AppTheme" parent="AppTheme.Classic"/>
    <style name="AppTheme.Detail" parent="AppTheme.Classic.Detail"/>
    <style name="AppThemeRomantic" parent="AppThemeRomantics"/>
    <style name="AppThemeRomanticDetail" parent="AppThemeRomantics.Detail"/>

    <style name="AppTheme.Classic" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryClassic</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDarkClassic</item> 
        <item name="colorControlHighlight">@color/colorAccentTranslucentClassic</item> 
        <item name="colorAccent">@color/colorAccentClassic</item>
        <item name="android:textColor">#FFFFFF</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>

        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>



        <!-- change the background color of overflow drop down list view -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuListView</item>

    </style>

    <style name="AppTheme.Classic.Detail" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryClassic</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDarkClassic</item> 
        <item name="colorControlHighlight">@color/colorAccentTranslucentClassic</item> 
        <item name="colorAccent">@color/colorAccentClassic</item>
        <item name="android:textColor">#FFFFFF</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>

        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>



        <!-- change the background color of overflow drop down list view -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuListView</item>

    </style>

    <style name="AppThemeRomantics" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRomantic</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRomantic</item> 
        <item name="colorControlHighlight">@color/colorAccentTranslucentRomantic</item> 
        <item name="colorAccent">@color/colorAccentRomantic</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

        <!--<item name="android:listViewStyle">@style/ListViewStyle.Light</item>-->

        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>

        <!-- change the background color of overflow drop down list view -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuListView</item>

    </style>

    <style name="AppThemeRomantics.Detail" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRomantic</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRomantic</item> 
        <item name="colorControlHighlight">@color/colorAccentTranslucentRomantic</item> 
        <item name="colorAccent">@color/colorAccentRomantic</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

        <!--<item name="android:listViewStyle">@style/ListViewStyle.Light</item>-->

        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>

        <!-- change the background color of overflow drop down list view -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuListView</item>

    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/colorAccent</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="ListViewStyle.Light" parent="@android:style/Widget.ListView">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="background">@android:color/white</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
        <!--<item name="android:listSelector">@drawable/actionbar_background_green</item>-->
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>


</resources>
